    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automat warten"
            android:id="@+id/btnMaintenance" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket bearbeiten"
            android:id="@+id/btnEditTicket"
            android:checked="false"
            android:layout_gravity="bottom"
            android:textOn="Ticket bearbeiten"
            android:textOff="Ticket bezahlen" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket lÃ¶sen"
            android:id="@+id/btnCreateTicket"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Parktickets"
            android:id="@+id/textView" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:id="@+id/listView"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView"/>

    </LinearLayout>